@model Mvc5Examples.Areas.Chapter08.Models.MyDb2Model.MyTable2
@{
    var a1 = new { @class = "col-md-2 control-label" };
    var a2 = "col-md-10";
    var a3 = new { htmlAttributes = new { @class = "form-control" } };
    var a4 = new { @class = "text-danger" };
}
<style>
    input { max-width: 200px; }
</style>

<div id="myModal" class="modal fade">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header btn-success">
                    <h4 class="modal-title">编辑行</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", a4)
                        <div class="form-group">
                            @Html.LabelFor(model => model.StudentID, a1)
                            <div class="@a2">
                                @Html.EditorFor(model => model.StudentID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.StudentID, "", a4)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.StudentName, a1)
                            <div class="@a2">
                                @Html.EditorFor(model => model.StudentName, a3)
                                @Html.ValidationMessageFor(model => model.StudentName, "", a4)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.RuXueShiJian, a1)
                            <div class="@a2">
                                @Html.TextBoxFor(model => model.RuXueShiJian, "{0:yyyy-MM-dd}", new { @id = "datepicker1", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RuXueShiJian, "", a4)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="btn-block text-right">
                        <input type="submit" value="确定" class="btn btn-primary" />
                        <a class="btn btn-primary" href="@Url.Action("Index")">取消</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script>
    $("#datepicker1").datepicker();
    $("#myModal").modal();
</script>

@model Mvc5Examples.Areas.Chapter08.Models.MyDb2Model.MyTable2
@{
    var a1 = new { @class = "col-md-3 control-label" };
    var a2 = "col-md-8";
    var a3 = new { @class = "form-control" };
    var a4 = new { @style = "color:red;" };
}
<div class="center-block" style="width:500px;">
    <div class="panel panel-success">
        <div class="panel-heading">添加新行</div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.StudentID, a1)
                        <div class="@a2">
                            @Html.TextBoxFor(model => model.StudentID, a3)
                            @Html.ValidationMessageFor(model => model.StudentID, "", a4)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StudentName, a1)
                        <div class="@a2">
                            @Html.TextBoxFor(model => model.StudentName, a3)
                            @Html.ValidationMessageFor(model => model.StudentName, "", a4)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RuXueShiJian, htmlAttributes: a1)
                        <div class="@a2">
                            @Html.TextBoxFor(model => model.RuXueShiJian, "{0:yyyy-MM-dd}",
                                    new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RuXueShiJian, "", a4)
                        </div>
                    </div>
                </div>
                <div class="center-block text-center">
                    <input type="submit" value="添加" class="btn btn-primary" />
                    <a class="btn btn-primary" href="@Url.Action("Index")">取消</a>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $("#RuXueShiJian").datepicker();
</script>

@model Mvc5Examples.Areas.Chapter03.Models.MyUserModel
@{
    var ajaxOptions = new AjaxOptions { UpdateTargetId = "bodyContent" };
    var c3 = "form-control";
    var c4 = new { @style = "color:red;" };
}
<h4 class="bg-success">基本用法5：在导航栏中显示表单</h4>
<nav class="navbar navbar-default">
    @using (Ajax.BeginForm(ajaxOptions))
    {
        @Html.AntiForgeryToken()
        <div class="navbar-form navbar-left">
            <div class="form-group">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = c3, @style = "max-width:100px", placeholder = "输入用户名" })
                @Html.LabelFor(m => m.Age)
                @Html.TextBoxFor(m => m.Age, new { @class = c3, @style = "max-width:60px;" })
                <input type="submit" class="btn btn-primary" value="提交" />
            </div>
        </div>
    }
</nav>
<div style="margin-top:15px;">
    @Html.ValidationSummary("", new { @class = "alert-danger" })
</div>
<pre>@ViewBag.Result</pre>

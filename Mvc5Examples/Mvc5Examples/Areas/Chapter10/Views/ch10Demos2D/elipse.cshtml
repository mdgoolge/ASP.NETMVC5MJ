<style>
    svg,canvas { width: 100%; height: 200px; border: 1px solid grey; }
    .mcanvas{ border: 1px solid grey; }
    .a1 { fill: #0094ff; stroke: #ff0000; }
</style>
<h3 class="btn-success">圆和椭圆</h3>
<div id="div1" class="row" style="text-align:center;">
    <div class="col-md-6">
        <h4>用svg实现</h4>
        <svg>
            <circle class="a1" cx="40" cy="25" r="20" stroke-width="0" />
            <circle class="a1" cx="40" cy="75" r="20" stroke-width="3" />
            <circle class="a1" cx="40" cy="125" r="20" stroke-width="6" />

            <ellipse class="a1" cx="150" cy="40" rx="50" ry="25" />
            <ellipse class="a1" cx="150" cy="130" rx="25" ry="50" stroke-width="2" />
        </svg>
    </div>
    <div class="col-md-6">
        <h4>用canvas实现</h4>
        <canvas id="c1"></canvas>
    </div>
</div>
<script>
    var v = $("#c1");
    v.attr("width", v.css("width"));
    v.attr("height", v.css("height"));
    var ctx = document.getElementById("c1").getContext("2d");
    ctx.beginPath();
    ctx.arc(40, 25, 20, 0, 2 * Math.PI);
    ctx.closePath();
    ctx.fillStyle = "#0094ff";
    ctx.fill();

    ctx.beginPath();
    ctx.arc(40, 75, 20, 0, 2 * Math.PI);
    ctx.closePath();
    ctx.fill();
    ctx.lineWidth = 3;
    ctx.strokeStyle = "#ff0000";
    ctx.stroke();

    ctx.beginPath();
    ctx.arc(40, 125, 20, 0, 2 * Math.PI);
    ctx.closePath();
    ctx.fill();
    ctx.lineWidth = 6;
    ctx.strokeStyle = "#ff0000";
    ctx.stroke();

    var x = 150, y = 40;
    var xRadius = 75, yRadius = 50;
    var k = xRadius, w = xRadius / 2, h = yRadius / 2;
    ctx.beginPath();
    ctx.moveTo(x, y - h);
    ctx.bezierCurveTo(x + k, y - h, x + k, y + h, x, y + h);
    ctx.bezierCurveTo(x - k, y + h, x - k, y - h, x, y - h);
    ctx.closePath();
    ctx.fill();
    ctx.lineWidth = 1;
    ctx.strokeStyle = "#ff0000";
    ctx.stroke();
</script>



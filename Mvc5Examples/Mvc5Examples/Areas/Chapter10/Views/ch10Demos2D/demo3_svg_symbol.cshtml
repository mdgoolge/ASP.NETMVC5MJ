<svg width="100%" height="400">
    <title>marker和symbol的基本用法</title>
    <defs>
        <marker id="circle" viewBox="0,0 10,10" markerUnits="strokeWidth"
                markerWidth="5" markerHeight="5" 
                refX="5" refY="5" orient="auto">
            <circle cx="5" cy="5" r="5" style="stroke: none; fill:#ff0000;" />
        </marker>
        <marker id="arrow" viewBox="0 0 12 12" refX="0" refY="5"
                markerUnits="strokeWidth" markerWidth="3" markerHeight="4"
                orient="auto">
            <path d="M 0,0 L 10,5 L 0,10 Z" />
        </marker>
    </defs>
    <line x1="50" y1="20" x2="400" y2="20"
          stroke="black" stroke-width="3"
          marker-start="url(#circle)" marker-end="url(#arrow)"></line>
    <path d="M50,100 c75,-85 100,80 150,30 s250,-50 150,20"
          stroke="purple" stroke-width="4" fill="none"
          marker-start="url(#arrow)"
          marker-mid="url(#arrow)"
          marker-end="url(#arrow)" />
    <line x1="400" y1="220" x2="50" y2="220"
          stroke="black" stroke-width="3"
          marker-start="url(#circle)" marker-end="url(#arrow)"></line>

    <defs>
        <symbol id="sym01" viewBox="0 0 150 110">
            <circle cx="50" cy="50" r="40" stroke-width="8" stroke="red" fill="red" />
            <circle cx="90" cy="60" r="40" stroke-width="8" stroke="green" fill="white" />
        </symbol>
    </defs>
    @for (int i = 0; i < 5; i++)
    {
        <use xlink:href="#sym01"
             x="500" y="@(i*50)" width="@(150-i*25)" height="@(60-i*10)" />
    }
</svg>

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>emulator</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <h5 class="text-center">
        <a id="mobileEmulater" href="@Url.Action("MainIndex")" target="mobile" style="margin-left:15px; margin-right:15px;">模拟手机屏幕</a>
        <a id="ipadEmulater" href="@Url.Action("MainIndex")" target="ipad">模拟平板电脑屏幕</a>
        <a href="@Url.Action("MainIndex")" style="margin-left:15px;">返回到桌面主页</a>
    </h5>
    <div class=" center-block text-center">
        <iframe hidden id="iframe1" name="mobile" style="width: 450px; height: 650px; border-width: 110px 20px; border-image: url(/common/images/home/mobile.jpg) 110 20 round; "></iframe>
        <iframe hidden id="iframe2" name="ipad" style="width: 760px; height: 650px; border-width: 100px 30px; border-image: url(/common/images/home/ipad.jpg) 100 30 round;"></iframe>
    </div>
    <script>
        $("#mobileEmulater").click(function () {
            $("#iframe1").show();
            $("#iframe2").hide();
        });
        $("#ipadEmulater").click(function () {
            $("#iframe1").hide();
            $("#iframe2").show();
        });
    </script>
</body>
</html>

        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                var k = "a" + m.ID.ToString();
                @Html.HiddenFor(modleitem=>m.ID )
                <tr>
                    <td>@Html.DisplayFor(modelItem=>m.StudentID )</td>
                    <th>@Html.DisplayFor(modelItem => m.MyTable2.StudentName)</th>
                    <th>@Html.DisplayFor(modelItem => m.KeChengID)</th>
                    <th>@Html.DisplayFor(modelItem => m.MyTable1.KeChengName)</th>
                    <th>
                        @Html.EditorFor(modeItem => m.Grade, "MyTable3", k, new { htmlAtrributes = new { @class="text-center",style="max-width:60px;"} })

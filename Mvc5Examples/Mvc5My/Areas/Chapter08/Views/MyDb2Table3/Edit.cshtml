                @{var t = Model.FirstOrDefault();   }
                <th>@Html.DisplayNameFor(model => t.StudentID )</th>
                <th>@Html.DisplayNameFor(model => t.MyTable2.StudentName )</th>
                <th>@Html.DisplayNameFor(model => t.MyTable1.KeChengID )</th>

@model Mvc5My.Areas.Chapter03.Models.MyUserModel 
@{
    var ajaxOptions = new AjaxOptions { UpdateTargetId = "bodyContent" };
    var c1 = new { @class = "control-label" };
    var c2 = "form-control";
    var c3 = new { @style = "color:red;" };
}
<style>
    input { max-width: 280px; }
</style>
<h4 class="bg-success">基本用法1：纵向排列（label和input各单独占一行）</h4>
@using (Ajax.BeginForm(ajaxOptions))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, c1)
        @Html.TextBoxFor(m => m.UserName, new { @class = c2, placeholder = "输入用户名iiii" })
        @Html.ValidationMessageFor(m => m.UserName, "", c3)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age, c1)
        @Html.TextBoxFor(m => m.Age, new { @class = c2, placeholder = "输入年龄" })
        @Html.ValidationMessageFor(m => m.Age, "", c3)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">提交</button>
    </div>
}
<pre>@ViewBag.Result</pre>

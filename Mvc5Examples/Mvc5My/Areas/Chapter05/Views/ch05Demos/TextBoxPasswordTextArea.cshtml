@model Mvc5My.Areas.Chapter03.Models.MyUserModel 
@{
    var ajaxOptions = new AjaxOptions { UpdateTargetId = "bodyContent" };
    var c1 = "col-md-2 control-label";
    var c2 = "col-md-6";
    var c3 = "form-control";
}
<h4 class="bg-success">单行文本框、密码框和多行文本框的基本用法</h4>
@using (Ajax.BeginForm(ajaxOptions))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = c1 })
            <div class="@c2">
                @Html.TextBoxFor(m => m.UserName, new { @class = c3 })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserPassword, new { @class = c1 })
            <div class="@c2">
                @Html.PasswordFor(m => m.UserPassword, new { @class = c3 })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OtherInfo, new { @class = c1 })
            <div class="@c2">
                @Html.TextAreaFor(m => m.OtherInfo, new { @class = c3, @style = "height: 100px;" })
            </div>
        </div>
         @Html.ValidationSummary("", new { @class = "alert-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" class="btn btn-primary" value="提交" />
            </div>
        </div>
    </div>
}
<pre>@ViewBag.Result</pre>
